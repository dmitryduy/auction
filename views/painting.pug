head
    title Аукцион
    link(rel='stylesheet', href='/css/index.min.css', type='text/css')
body
    .container
        header.header
            h1.header__title= painting.title
            .header__content
                span.header__author= painting.author
                span.header__country= painting.country
        .painting-content
            main.main
                img.main__image(src=painting.image alt=painting.title)
                .desctiption.card-info
                    .top.description__title Описание
                    p.bottom.description__content= painting.desc
            aside.aside
                .bid-and-date.card-info
                    .top
                        p.bid-and-date__remain Auction Ends: Dec 2, 2021
                        .timer
                            .time__day
                                span
                                span days
                            .time__hour
                                span
                                span hrs
                            .time__minute
                                span
                                span mins
                            .time__second
                                span
                                span secs
                    .bottom.bid
                        .bid__info
                            p Текущая цена
                            p Никто не поставил
                        .bid__price $ #{painting.startPrice}
                        button.bid__button.button Поставить
                .auction-info.card-info
                    .top
                        .auction-info__title
                            h3 Информация об аукционе
                    .bottom
                        .auction-info__start-date
                            span Начало аукциона:
                            span 14 ноября 2021
                        .auction-info__end-date
                            span Конец аукциона:
                            span 15 ноября 2021
                .editing.card-info
                    .top.editing__title
                        h3 Редактирование картины
                    .bottom.editing__content
                        .editing__field
                            p.editing__attr-name Название:
                            div(contenteditable='true')= painting.title
                        .editing__field
                            p.editing__attr-name Автор:
                            div(contenteditable='true')= painting.author
                        .editing__field
                            p.editing__attr-name Страна:
                            div(contenteditable='true')= painting.country
                        .editing__field
                            p.editing__attr-name Цена($):

                            div(contenteditable='true')= painting.startPrice
                        .editing__field
                            p.editing__attr-name Фото:
                            div(contenteditable='true')= painting.image
                        button.button Редактировать



    script(src='/js/app.min.js')



